
@{
    ViewBag.Title = "Guest_InformationList";
    Layout = "~/Views/Shared/_CardRegisterLayout.cshtml";
}

<div class="col-xs-12 col-md-6">
    <div>
        <table id="tblGuestList" class=" col-sm-12" style="margin-left:10px;">
            <thead>
                <tr>
                    <th>Room No:</th>
                    <th>Nationality:</th>
                    <th>Arrival Date:</th>
                    @*<th></th>
                    <th></th>
                    <th></th>*@
                </tr>
            </thead>
        </table>
    </div>

</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            GuestInformation();
        });

            function GuestInformation() {
                $.ajax({
                    type: "Post",
                    url: "@Url.Action("GetGuestInformation", "api/CardAPI/")",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",

                    success: function (response) {
                        BindGuestInformationTable(response);
                    }
                });

            }

            function BindGuestInformationTable(response) {

                table = $('#tblGuestList').DataTable({

                    data: JSON.parse(response),
                    "bFilter": false,
                    "bLengthChange": false,
                    "bInfo": false,
                    "ordering": false,
                    "pagingType": "simple_numbers",
                    destroy: true,
                    "columns": [
                        { "data": "roomno", orderable: false, "width": "13%" },
                        { "data": "nationality_text", orderable: false, "width": "13%" },
                        { "data": "pmsid", orderable: false, "width": "13%" },
                        //{ "data": "", orderable: false, "width": "13%" },
                        //{ "data": "", orderable: false, "width": "13%" },
                        //{ "data": "", orderable: false, "width": "13%" },
                        //{ "data": "", orderable: false, "width": "13%" },
                        //{ "data": "", orderable: false, "width": "13%" },
                        //{ "data": "", orderable: false, "width": "13%" },
                        //{ "data": "", orderable: false, "width": "13%" },
                    ]

                });
            }
        
    </script>
}


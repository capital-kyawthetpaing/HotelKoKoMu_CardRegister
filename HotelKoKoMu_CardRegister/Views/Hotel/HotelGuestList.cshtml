        //    str = $('#txtCheckinRoom').val();
        //    if (str != "") {
        //        str = str.toString();
        //        if (str.length < 4) {
        //            ShowError("Please Check Your Check-in Room");
        //        }
        //        else
        //            flag = true;
        //    }
        //    return flag;
        //}

        //number only

        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }


        //auto complete zero fill in checkin roomno
        $('#txtCheckinRoom').on('keydown', function (e) {
            if (e.keyCode == 13 || e.keyCode == 9) {

                Hotelinfo = { RoomNo: $('#txtCheckinRoom').val(), HotelNo: $('#lblhotelcode').text()}

                var result = CalltoApiController('@Url.Action("CheckRoomNo", "api/HotelAPI/")', Hotelinfo);
                if (result != 'Error')
                    $('#txtCheckinRoom').val(result);
                else
                    ShowError(" RoomNo is not match!");

                //str = $('#txtCheckinRoom').val();
                //str = str.toString();


@{
    ViewBag.Title = "Hotel_System";
    Layout = "~/Views/Shared/_CardRegisterLayout.cshtml";
    //var lang = HttpContext.Current.Request.Cookies["culture"].Value;
}

<section class="content">
    <div class="container-fluid" id="content_zip">

        <div class="row">
            <div class="col-xl-12 col-md-12 mb-2">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="tbhotel" class="hrtable col-sm-12 col-md-12">
                                <thead>
                                    <tr>
                                        <th>ReservationNo:</th>
                                        <th>RoomNo:</th>
                                        <th>ArriveDate:</th>
                                        <th>DepartureDate:</th>
                                        <th>NameKanji:</th>
                                        <th>NameKana:</th>
                                        <th>ZipCode:</th>
                                        <th>Tel:</th>
                                        <th>Address1:</th>
                                        <th>Address2:</th>
                                        <th>Company:</th>
                                        <th>Nationality:</th>
                                        <th>PassportNo:</th>
                                    </tr>
                                </thead>
                                <tbody>

                                </tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-12 text-center">
            <div class="card border-bottom-success shadow h-100">
                <div class="card-body">
                    <div class="text-s font-weight-bold text-custom1 text-uppercase mb-1">
                        <button type="submit" id="btnSave" class="btn btn-success col-xl-2" tabindex="38"><i class="fa fa-save"></i>&nbsp; Register</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
           
            var result = CalltoApiController('@Url.Action("GetGuestInformationFromHotel", "api/HotelAPI/")');
            alert("go");
            if (result != "") {
                var info = "<tr><td>" + result[0].ReservationNo + "</td><td>" + result[0].RoomNo + "</td><td>" + result[0].ArriveDate + "</td><td>" + result[0].DepartureDate + "</td><td>"
                    + result[0].NameKanji + "</td><td>" + result[0].NameKana + "</td><td>" + result[0].ZipCode + "</td><td>" + result[0].Tel + "</td><td>" + result[0].Address1 + "</td><td>"
                    + result[0].Address2 + "</td><td>" + result[0].Company + "</td><td>" + result[0].Nationality + "</td><td>" + result[0].PassportNo + "</td><td>" + "</tr > ";
                $('#tbhotel tbody').append(info);
            }
        });

    </script>

}

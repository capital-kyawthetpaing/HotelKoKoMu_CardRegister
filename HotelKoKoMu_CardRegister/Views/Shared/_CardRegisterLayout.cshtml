<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery-3.5.1.js")"></script>   
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Global.css")" />
</head>
<body>
    <div class="container" style="margin-top:10px;">
        <div class="card">
            <h5 class="card-header text-center" style="margin-top: 15px;border-radius: unset; background-color: #1b5696">@HotelKoKoMu_CardRegister.Resources.CardRegisterPage1.Title</h5>
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
        <div style="padding:5px">

            @{
                foreach (var i in HotelKoKoMu_CardRegister.MultiLanguages.AvailableLanguages)
                {
                    @Html.ActionLink(i.LanguageFullName, "ChangeLanguage", "Card", new { lang = i.LanguageCultureName }, null) <text> </text>
                }
            }
        </div>
       
    </div>
</body>
</html>
@RenderSection("scripts", required: false)
